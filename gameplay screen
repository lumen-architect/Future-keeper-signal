      <div class="bar" id="clarity-bar" style="width: 60%"></div>
    </div><div class="label">Emotional Equilibrium</div>
<div class="bar-container">
  <div class="bar" id="emotion-bar" style="width: 50%"></div>
</div>

<div class="label">Alignment Log</div>
<button onclick="logAlignment('Aligned')">✓ Aligned</button>
<button onclick="logAlignment('Faltered')">✗ Faltered</button>
<div class="log" id="log-output"></div>

  </div>  <script>
    const clarityBar = document.getElementById('clarity-bar');
    const emotionBar = document.getElementById('emotion-bar');
    const logOutput = document.getElementById('log-output');

    function logAlignment(state) {
      const timestamp = new Date().toLocaleTimeString();
      const entry = `${timestamp} → ${state}`;
      const logItem = document.createElement('div');
      logItem.textContent = entry;
      logOutput.prepend(logItem);

      // Animate bars for fun feedback
      if (state === 'Aligned') {
        incrementBar(clarityBar, 10);
        incrementBar(emotionBar, 5);
      } else {
        incrementBar(clarityBar, -10);
        incrementBar(emotionBar, -5);
      }
    }

    function incrementBar(bar, amount) {
      let current = parseFloat(bar.style.width);
      let next = Math.min(Math.max(current + amount, 0), 100);
      bar.style.width = `${next}%`;
    }
  </script></body>
